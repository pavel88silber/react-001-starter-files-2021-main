/*
  Анимация:
  enter
  exit
*/


.order-enter
  // background: red;
  transition: 0.5s;
  transform: translate(-120%);
  max-height: 0;
  &.order-enter-active
    // background: yellow;
    transform: translateX(0);
    max-height: 60px;
    padding: 2rem 0 !important

.order-exit
  // background: blue;
  transition: 0.5s;
  transform: translate(0);
  &.order-exit-active
    // background: yellow;
    transform: translateX(120%)
    padding: 0;

.count-enter
  // background: red;
  transition: 0.5s;
  transform: translateY(100%);
  &.count-enter-active
    // background: yellow;
    transform: translateY(0);
    
.count-exit
  // background: rgb(158, 53, 53);
  transition: 0.5s;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: translateY(0);
  &.count-exit-active
    // background: rgb(87, 87, 8);
    transform: translateY(-100%);
